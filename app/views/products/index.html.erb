<div class="container"> 
  <div class="row"> 
    <div class="col-md-12">
      <p>There are <%= pluralize(@products.size, 'product') %></p>
        <nav>
         <%= link_to 'Add Your Product', new_product_path, class: "btn btn-primary btn-sm" %>
        </nav>
        <br>
    </div>
  </div>
</div>

<% if @products.any? %>
<div class="container"> 
  <div class="row"> 
    <% @products.each do |product| %> 
      <div class="col-md-3">
        <div class="thumbnail">
          <h1><%= link_to product.name, product %></h1>
          <div><%= link_to 'More Details', product %></div> 
        </div>  
      </div>
    <% end %>
  </div>
</div>
<% else %>
  <p>No search results match <%= params[:search] %>.</p>
<% end %>