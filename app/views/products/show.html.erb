<% content_for(:title, @product.name) %>

<div class="container"> 
  <div class="row"> 
    <div class="col-md-12" id="establishment_header">
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <p><%= @product.price %></p>
    </div>
  </div>

  <div class="row"> 
    <div class="col-md-5">
      <div class="add-margin-bottom"><%= link_to 'Back To All Products', products_path, class: "btn btn-primary btn-sm" %></div>
    </div>

    <div class="col-md-4">
      <div class="row">

      </div>
    </div>

    <div class="col-md-3">
      <div class="row">

      </div>
    </div>
  </div>

  <% if current_user.id === @product.user.id || current_user.admin? %>
  <div class="row">
    <div class="col-md-12">
      <div class="button-margin"><%= link_to "Edit Product", edit_product_path(@product), class: "btn btn-primary btn-sm" %></div>
      <div class="button-margin"><%= link_to "Delete Product", @product, method: :delete, 
      data: { confirm: "Are you sure you want to delete this product?" }, class: "btn btn-primary btn-sm" %></div>
    </div>
  </div>
  <% end %>
