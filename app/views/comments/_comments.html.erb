<div class="container">
  <div class="jumbotron">
    <h2>What you really think about <%= @establishment.name %></h2>
     <div class="btn btn-info btn-sm"><%= link_to "Add a Comment", new_establishment_comment_path(@establishment) %></div>
    <% @establishment.comments.each do |c| %>

    <p><%= c.user.name %> gave <%= c.stars %> stars</p>
    <p>Saying "<%= c.text %> "</p>
    <hr>
    <% end %>
  </div>
</div>