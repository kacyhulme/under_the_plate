<% if flash[:alert] %>
    <p class="alert alert-info">
      <%= flash[:alert] %>
    </p>
  <% end %>


<h1>Sign In</h1>
<%= form_tag(session_path) do %>
  <div class="form-group">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, '', class: "form-control" %>
  </div>
  <div class="actions"><%= submit_tag "Sign In", class: "btn btn-primary"%></div>
  <br>
	<div>Don't have an account? <%= link_to "Sign Up!", signup_path %></div>
	</div>
<% end %>