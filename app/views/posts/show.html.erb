<% content_for(:title, @post.title) %>

<div class="container"> 
  <div class="row"> 
    <div class="col-md-12" id="establishment_header">
      <h1><%= @post.title %></h1>
      <p><%= @post.body %></p>
    </div>
  </div>

  <% if current_user_admin? %>
  <div class="row add-margin-bottom">
    <div class="col-md-12">
      <div class="button-margin"><%= link_to 'View All Posts', posts_path, class: "btn btn-primary btn-sm" %></div>
      <div class="button-margin"><%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary btn-sm" %></div>
      <div class="button-margin"><%= link_to "Delete Post", @post, method: :delete, 
      data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-primary btn-sm" %></div>
    </div>
  </div>

  <div class="row add-margin-bottom">
    <div class="col-md-12">
      <h3>Comments</h3>
      <div class="btn btn-info btn-sm"><%= link_to "Add a Comment", new_establishment_comment_path(@post) %></div>
    </div>
  </div>

  <div>
    <%= render "comments/comments" %>
  </div>
  <% end %>
</div>
