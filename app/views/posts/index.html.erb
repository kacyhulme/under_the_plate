<div class="row panel panel-default"> 
  <div class="col-md-4 add-margin-bottom panel-body">
    <h3>About Me</h3>
  </div>
  <div class="col-md-4 add-margin-bottom panel-body">
    <h3>All Posts</h3>
  </div>
  <div class="col-md-4 add-margin-bottom panel-body">
    <h3>Follow Me</h3>

    <%= render 'shared/social_media_icons' %>

  </div>
</div>

<% if @posts.any? %>
<div class="container"> 
  <div class="row"> 
    <% @posts.each do |p| %> 
    <div class="col-md-3">
      <div class="thumbnail">
        <h1><%= link_to p.title, blog_path(p) %></h1>
        <div><%= link_to 'Get the Details', blog_path(p) %></div> 
      </div>  
    </div>
    <% end %>
  </div>
  <% else %>
  <p>No search results match <%= params[:search] %>.</p>
  <% end %>
  <div>There are <%= pluralize(@posts.size, 'post') %></div>
</div>
