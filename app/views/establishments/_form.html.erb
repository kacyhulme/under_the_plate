<%= form_for(@establishment) do |f| %>
  <%= render "shared/errors", object: @establishment %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
   
    <div class="form-group">
      <%= f.label :address_id %>
      <%= collection_select :establishment, :address_id, Address.all, :id, :address_display_name, {prompt: "Select an address"}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :distributor_id %>
      <%= collection_select :establishment, :distributor_id, Distributor.all, :id, :name, {prompt: "Select a distributor"}, {class: "form-control"}  %>
    </div>

    <div class="form-group">
      <%= f.collection_check_boxes :cuisine_ids, Cuisine.all, :id, :name, {}, {class: "form-control"}  %>
    </div>

    <div class="actions">
      <% if @establishment.new_record? %>
        <%= f.submit "Add Establishment", class: "btn btn-primary btn-sm" %>
      <% else %>
        <%= f.submit "Update Establishment", class: "btn btn-primary btn-sm"  %>
      <% end %>
    </div>
  </fieldset>
<% end %>