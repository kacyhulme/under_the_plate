<%= form_for(@establishment) do |f| %>
<%= render "shared/errors", object: @establishment %>
<fieldset>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :addressable_id %>
    <%= f.collection_select :id, Address.all, :addressable_id, :address_display_name, {prompt: "Select an address"}, {class: "form-control"} %>
  </div>

  <div class="form-group checkbox-style">
    <%= f.label :distributor_id %>
    <%= f.collection_check_boxes :distributor_ids, Distributor.all, :id, :name, {prompt: "Select a distributor"}, {class: "checkbox"}  %>
  </div>

  <div class="form-group checkbox-style">
    <%= f.label :cuisine_id %>
    <%= f.collection_check_boxes :cuisine_ids, Cuisine.all, :id, :name, {}, {class: "checkbox"}  %>
  </div>

  <div class="actions">
    <% if @establishment.new_record? %>
    <%= f.submit "Add Establishment", class: "btn btn-primary btn-sm" %>
    <% else %>
    <%= f.submit "Update Establishment", class: "btn btn-primary btn-sm"  %>
    <% end %>
  </div>
</fieldset>
<% end %>