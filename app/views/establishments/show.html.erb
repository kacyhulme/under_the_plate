 <nav>
   <%= link_to 'All Establishments', establishments_path %>
 </nav>
<div class="container"> 
  <div class="row"> 
    <div class="col-md-3">
      <div class="thumbnail">
        <div>Name: <%= @establishment.name %></div>
        <div>Address: <%= @establishment.address_id %></div>
        <div>Owner: <%= @establishment.owner_id %></div>
        <div>Distributor: <%= @establishment.distributor_id %></div>
          <% @cuisines.each do |cuisine| %>
          <div>Cuisine: <%= cuisine.name %></div>
          <% end %>
        </div>
      </div>  
        <% if current_user_admin? %>
        <%= link_to "Edit Establishment", edit_establishment_path(@establishment), class: "btn btn-primary" %>
        <%= link_to "Delete Establishment", @establishment, method: :delete, 
        data: { confirm: "Are you sure you want to delete this establishment?" }, class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>