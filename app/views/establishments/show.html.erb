<div class="container"> 
  <div class="row"> 
    <div class="col-md-12" id="establishment_header">
      <h1><%= @establishment.name %></h1>
    </div>
  </div>

  <div class="row"> 
    <div class="col-md-3">
      <h3> Locations </h3>
      <%= render 'addresses/addresses' %>
      <hr>
      <h4>Add a New Address</h4>
      <%= render 'addresses/form' %>
    </div>

    <div class="col-md-3">
      <div class="row">
        <h3> Distributors </h3>
        <% @establishment.distributors.each do |d| %>
        <p><%= d.name %></p>
        <% end %>
      </div>
      <div class="row">
        <h3> Cuisine </h3>
        <% @establishment.cuisines.each do |cuisine| %>
        <p><%= cuisine.name %></p>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="row">
        <h3> Qualifications </h3>
        <% @establishment.qualifications.each do |q| %>
        <p><%= q.name %></p>
        <% end %>
      </div>
      <div class="row">
        <h3> Special Items </h3>
      </div>
    </div>

    <div class="col-md-3">
      <p><%= link_to 'View All Establishments', establishments_path, class: "btn btn-primary btn-sm" %></p>
      <% if current_user_admin? %>
      <p><%= link_to "Edit Establishment", edit_establishment_path(@establishment), class: "btn btn-primary btn-sm" %></p>
      <p><%= link_to "Delete Establishment", @establishment, method: :delete, 
      data: { confirm: "Are you sure you want to delete this establishment?" }, class: "btn btn-primary btn-sm" %></p>
      <% end %>
    </div>
  </div>  
</div>
