<div class="flash">
  <% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <% if flash[:alert] %>
  <div class="alert alert-warning">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p><%= flash[:alert] %></p>
  </div>
  <% end %>
</div>