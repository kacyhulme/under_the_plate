<%= form_for(@user) do |f| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, size: 40, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, size: 40, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, size: 40, class: "form-control" %>
      </div>
    <div class="actions">
      <% if @user.new_record? %>
        <%= f.submit "Create Account", class: "btn btn-primary btn-sm" %>
      <% else %>
        <%= f.submit "Update Account", class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </fieldset>
<% end %>
