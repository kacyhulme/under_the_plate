<h1><%= pluralize(@users.size, 'User') %></h1>

<%= link_to "Admin Users", filtered_users_path(:admin), class: "btn btn-primary"  %>
<%= link_to "Non-admin Users", filtered_users_path(:non_admin), class: "btn btn-primary"  %>

<ul>
	<% @users.each do |user| %>
	<li>
		<%= link_to user.name, user %>
	</li>
	<% end %>
</ul>

<%= link_to "Add New User", new_user_path, class: "btn btn-primary"  %>
